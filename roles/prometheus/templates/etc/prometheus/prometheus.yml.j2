global:
  scrape_interval: 10s
  evaluation_interval: 2s

rule_files:
  - life.rules
  - alert.rules

scrape_configs:
  - job_name: 'prometheus'
    static_configs:
      - targets:
        - demo.robustperception.io:9090
  - job_name: 'pushgateway'
    honor_labels: true
    static_configs:
      - targets:
        - demo.robustperception.io:9091
  - job_name: 'alertmanager'
    static_configs:
      - targets:
        - demo.robustperception.io:9093
  - job_name: 'node'
    static_configs:
      - targets:
        - demo.robustperception.io:9100

alerting:
  alertmanagers:
  - scheme: http
    static_configs:
    - targets:
      - demo.robustperception.io:9093
